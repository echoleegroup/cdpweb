<div class="container">
  <!-- table set Start -->
  <div class="table_block table-responsive">
    <h2>帳號清單</h2>
    <a href="/user/userSearch" title="重新查詢">
      <button type="submit" class="btn btn-default pull-right fa fa-search">重新查詢</button>
    </a>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>
            <!-- 此i 為sorting icon，只設定一組按鈕，連續點選請自訂排序規則 -->
            <i class="fa fa-sort" aria-hidden="true"></i> 帳號
          </th>
          <th>
            <!-- 此i 為sorting icon，只設定一組按鈕，連續點選請自訂排序規則 -->
            <i class="fa fa-sort" aria-hidden="true"></i> 姓名
          </th>
          <th>
            <!-- 此i 為sorting icon，只設定一組按鈕，連續點選請自訂排序規則 -->
            <i class="fa fa-sort" aria-hidden="true"></i> 最後登入時間
          </th>
          <th>註記</th>
        </tr>
      </thead>
      <tbody>
        {{#each items as |user|}}
        <tr>
          <td>{{user.no}}</td>
          <td>{{user.userId}}</td>
          <td>
            <a href="/user/UserInfoEdit?userId={{user.userId}}">{{user.username}}</a>
          </td>
          <td>{{user.loginTime}}</td>
          <td>{{user.isstop}}</td>
        </tr>
        {{/each}}


      </tbody>
    </table>
    <!-- pagination -->
  </div>
</div>