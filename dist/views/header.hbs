<script>
var x = "" ;
var o = document.getElementById("tempusermenu").value;
o = JSON.parse(o);
for( i in o ){
  if(o[i].mainMenu == "系統管理") {
	for( j in o[i].childMenu ) 
		x+= '<a href="'+o[i].childMenu[j].url+'" class ="btn btn-default">'+o[i].childMenu[j].menuName+'</a>';
	x+='<a href="/logout" class="btn btn-warning">登出</a>';
  }
}
document.getElementById("usermenu").innerHTML = x;
</script>

	
	