<div class="container">
	<!-- row div 於需要分兩欄才需要 -->
	<div class="row">
		<!-- 左欄 Start -->
		<div class="col-md-8 col-sm-7 col-xs-12">
			<!-- form set Start -->
			<div class="form_block">
				<h2>外部名單上傳</h2>
				<form id="reg" action="/feeddata/outdata/upload_act" method="post" onsubmit="return checkForm()" class="form-horizontal" enctype="multipart/form-data">
					<div class="form-group">
						<label for="inputName" class="col-sm-3 control-label">品牌</label>
						<div class="col-sm-8">
							<select class="form-control custom" id="client" name="client">
								<option value="TOYOTA">TOYOTA</option>
								<option value="LEXUS">LEXUS</option>
							</select>
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-3 control-label">名單名稱</label>
						<div class="col-sm-8">
							<input type="text" class="form-control " id="outerListName" name="outerListName" value="{{maininfo.[0].outerListName}}" disabled
							 placeholder="">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-3 control-label">屬性類別</label>
						<div class="col-sm-8">
							<select id="funcCatge" name="funcCatge" class="form-control custom" disabled>

								<option value="">{{maininfo.[0].codeLabel}}</option>

							</select>
						</div>
					</div>

					<div class="form-group">
						<label for="inputName" class="col-sm-3 control-label">必要檢核</label>
						<div class="col-sm-8">
							<label class="radio-inline">
								<input type="radio" id="uLiscNO" name="optradio" value="uLiscNO" disabled>車牌必填
							</label>
							<label class="radio-inline">
								<input type="radio" id="uCustID" name="optradio" value="uCustID" disabled>身份證字號必填
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-3 control-label">投放時間
						</label>
						<div class="col-sm-8">
							<!-- 日期js請參考 :http://eonasdan.github.io/bootstrap-datetimepicker/ -->
							<div class="form-inline">
								<input type="text" class="form-control" id="outerListSdt" name="outerListSdt" placeholder="" value="{{maininfo.[0].outerListSdt}}"
								 disabled>~
								<input type="text" class="form-control" id="outerListEdt" name="outerListEdt" placeholder="" value="{{maininfo.[0].outerListEdt}}"
								 disabled>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-3 control-label">註記</label>
						<div class="col-sm-8">
							<textarea class="form-control" rows="5" name="outerListDesc" id="outerListDesc" disabled>{{maininfo.[0].outerListDesc}}</textarea>
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-3 control-label form-inline">選擇檔案</label>
						<div class="col-sm-8">
							<div class="form-inline btn btn-default btn-file">
								<input type="hidden" class="form-control" id="imageFileTitle1" name="imageFileTitle1" placeholder="請輸入檔案" disabled> 請選擇檔案
								<input type="file" id="uploadingFile" name="uploadingFile" class="btn btn-lg btn-default" disabled>

							</div>

						</div>
					</div>
				</form>
			</div>

		</div>
		<div class="col-md-4 col-sm-5 col-xs-12">
			<div class="table_block">
				<h2>外部名單基本資訊</h2>
				<div class="info">
					<div class="table-responsive">
						<table class="table">
							<tbody>
								<tr>
									<td>名單總筆數</td>
									<td>{{maininfo.[0].total}}</td>
								</tr>

								<tr>
									<td>最後更新日期</td>
									<td>{{maininfo.[0].updTime}}</td>
								</tr>
								<tr>
									<td>最後更新人員</td>
									<td>{{maininfo.[0].updUser}}</td>
								</tr>
								<tr>
									<td>名單樣版：</td>
									<td>
										<a href="/asserts/pruisday.xlsx" class="btn btn-default">下載樣版</a>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal" id="modal1">
	<div class="table_block">
		<h2>上傳結果</h2>

		<div class="form-group">
			<label for="inputName" class="col-sm-3 control-label">上傳完成時間</label>
			<div class="col-sm-8">
				<input type="text" class="form-control " id="inputName" value="{{datetime}}" placeholder="" disabled>
			</div>
		</div>
		<div class="form-group">
			<label for="inputName" class="col-sm-3 control-label">新增名單筆數</label>
			<div class="col-sm-8">
				<input type="text" class="form-control " id="inputName" value="{{successnum}}" placeholder="" disabled>
			</div>
		</div>
		<div class="form-group">
			<label for="inputName" class="col-sm-3 control-label">名單總筆數</label>
			<div class="col-sm-8">
				<input type="text" class="form-control " id="inputName" value="{{total}}" placeholder="" disabled>
			</div>
		</div>
		<div class="form-group">
			<label for="inputName" class="col-sm-3 control-label">系統訊息</label>
			<div class="col-sm-8">
				<textarea class="form-control" rows="5" id="comment" disabled>
{{successnum}}筆新增成功,{{errornum}}筆錯誤資料, 
{{errormsg}}
                    </textarea>
			</div>
		</div>

	</div>
</div>
<script>
	$(function () {
		if ("{{dispaly}}" != "block") {
			$('.modal').hide();

		}
		$('.modal').append('<div class="overlay"></div>');
		$('.modal .overlay').click(function (event) {
			$('.modal').hide();
			$('body').removeClass('noscroll');
		});
	});

</script>