<div class="container">
  <!-- table set Start -->
  <div class="form_block">
    <h2>活動頁面查詢</h2>
    <form class="form-horizontal" id="reg" action="/actad/act/list" method="post">
      <div class="form-group">
        <label for="inputName" class="col-sm-3 control-label">品牌</label>
        <div class="col-sm-7">
          <select class="form-control custom" name="client">
            <option value="TOYOTA">TOYOTA</option>
            <option value="LEXUS">LEXUS</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="inputName" class="col-sm-3 control-label">類別</label>
        <div class="col-sm-7">
          <select id="funCatge" name="funcCatge" class="form-control custom">
            <option value="">全部</option>
            {{#each funcCatge as |fc|}}

            <option value="{{fc.codeValue}}">{{fc.codeLabel}}</option>

            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="inputName" class="col-sm-3 control-label form-inline">活動露出時間</label>
        <!-- 日期js請參考 :http://eonasdan.github.io/bootstrap-datetimepicker/ -->
        <div class="col-sm-7">
          <div class="form-inline">
            <input type="text" id="sdt" name="sdt" class="form-control"> ~
            <input type="text" id="edt" name="edt" class="form-control">
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="inputName" class="col-sm-3 control-label">活動名稱</label>
        <div class="col-sm-7">
          <input id="tpc" name="tpc" type="text" value="" class="form-control ">
        </div>
      </div>
      <div class="btn-block center-block">
        <input type="submit" class="btn btn-lg btn-default" value="查詢">
      </div>
    </form>


  </div>
</div>

<script>
  $('#sdt').datepicker({
    locale: "zh-tw"
  });
  $('#edt').datepicker({
    locale: "zh-tw"
  });
</script>