<div class="container">
  <!-- row div 於需要分兩欄才需要 -->
  <div class="row">
    <!-- 左欄 Start -->
    <div class="col-md-8 col-sm-7 col-xs-12">
      <!-- form set Start -->
      <div class="form_block">
        <h2>NCBS問卷上傳</h2>
        <form id="reg" action="/feeddata/NCBS/upload_act" method="post" onsubmit="return checkForm()" class="form-horizontal" enctype="multipart/form-data">
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">品牌</label>
            <div class="col-sm-8">
              <select class="form-control custom" id="client" name="client">
                <option value="TOYOTA">TOYOTA</option>
                <option value="LEXUS">LEXUS</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">問卷年度</label>
            <div class="col-sm-8">
              <input type="text" class="form-control " id="ncbsYear" name="ncbsYear" value="" placeholder="">
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">題目樣版</label>
            <div class="col-sm-8">
              <select class="form-control custom" id="ncbsQus" name="ncbsQus">
                {{#each ncbsDesc as |nd|}}
                <option value="{{nd.ncbsDesc}}">{{nd.ncbsDesc}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">回收批次名稱</label>
            <div class="col-sm-8">
              <input type="text" class="form-control " id="ncbsName" name="ncbsName" value="" placeholder="">
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">問卷調查日期
            </label>
            <div class="col-sm-8">
              <!-- 日期js請參考 :http://eonasdan.github.io/bootstrap-datetimepicker/ -->
              <div class="form-inline">
                <input type="text" class="form-control" id="ncbsSdt" name="ncbsSdt" placeholder="">~
                <input type="text" class="form-control" id="ncbsEdt" name="ncbsEdt" placeholder="">
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">註記</label>
            <div class="col-sm-8">
              <textarea class="form-control" rows="5" name="ncbsDesc" id="ncbsDesc"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label form-inline">選擇檔案</label>
            <div class="col-sm-8">
              <div class="form-inline btn btn-default btn-file">
                <input type="hidden" class="form-control" id="imageFileTitle1" name="imageFileTitle1" placeholder="請輸入檔案"> 請選擇檔案
                <input type="file" id="uploadingFile" name="uploadingFile" class="btn btn-lg btn-default" onchange="getFilePath()">
              </div>
              <div class="isa_warning" id="showPath" style="display:none">
                <i class="fa fa-file-text"></i>
                <font id="pathText"></font>
              </div>

            </div>
          </div>
          <div class="btn-block center-block">
            <button type="submit" id="openModal1" class="btn btn-lg btn-default">排程上傳</button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-4 col-sm-5 col-xs-12">
      <div class="table_block">
        <h2>問卷資料基本資訊</h2>
        <div class="info">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>問卷總筆數：</td>
                  <td></td>
                </tr>
                <tr>
                  <td>最後上傳時間：</td>
                  <td></td>
                </tr>
                <tr>
                  <td>最後上傳人員：</td>
                  <td></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $('#ncbsSdt').datepicker({
    locale: "zh-tw"
  });
  $('#ncbsEdt').datepicker({
    locale: "zh-tw"
  });
  function getFilePath() {
    var NewArray = new Array();
    NewArray = document.getElementById("uploadingFile").value.split("\\");
    document.getElementById("pathText").innerHTML = NewArray[2];
    document.getElementById("showPath").style.display = "block";
  }
  function checkForm() {
    if (document.getElementById("ncbsYear").value == '') {
      alert("請輸入問卷年度");
      document.getElementById("ncbsYear").focus();
      return false;
    }

    if (document.getElementById("ncbsQus").value == '') {
      alert("請輸入題目樣版");
      document.getElementById("ncbsQus").focus();
      return false;
    }
    if (document.getElementById("ncbsName").value == '') {
      alert("請輸入回收批次名稱");
      document.getElementById("ncbsName").focus();
      return false;
    }
    if (document.getElementById("ncbsSdt").value == '') {
      alert("請輸入問卷調查日期(起)");
      document.getElementById("ncbsSdt").focus();
      return false;
    }
    if (document.getElementById("ncbsEdt").value == '') {
      alert("請輸入問卷調查日期(終)");
      document.getElementById("ncbsEdt").focus();
      return false;
    }
    if (document.getElementById("excelFile1").value == '') {
      alert("請選擇檔案");
      document.getElementById("excelFile1").focus();
      return false;
    }
    return true;
  }

</script>