{{> title title='NCBS問卷上傳'}}
<div class="container">
  <!-- row div 於需要分兩欄才需要 -->
  <div class="row">
    <!-- 左欄 Start -->
    <div class="col-md-8 col-sm-7 col-xs-12">
      <!-- form set Start -->
      <div class="form_block">
        <h2>NCBS問卷上傳</h2>
        <form id="reg" action="/feedata/NCBS/upload_act" method="post" onsubmit="return checkForm()" class="form-horizontal" enctype="multipart/form-data">
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">品牌</label>
            <div class="col-sm-8">
              <select class="form-control custom" id="client" name="client" disabled>
                <option value="">{{maininfo.[0].Client}}</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">問卷年度</label>
            <div class="col-sm-8">
              <input type="text" class="form-control " id="ncbsYear" name="ncbsYear" value="{{maininfo.[0].ncbsYear}}" placeholder="" disabled>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">題目樣版</label>
            <div class="col-sm-8">
              <input type="text" class="form-control " id="ncbsQus" name="ncbsQus" value="{{maininfo.[0].ncbsQus}}" placeholder="" disabled>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">回收批次名稱</label>
            <div class="col-sm-8">
              <input type="text" class="form-control " id="ncbsName" name="ncbsName" value="{{maininfo.[0].ncbsName}}" placeholder="" disabled>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">問卷調查日期
            </label>
            <div class="col-sm-8">
              <!-- 日期js請參考 :http://eonasdan.github.io/bootstrap-datetimepicker/ -->
              <div class="form-inline">
                <input type="text" class="form-control" id="ncbsSdt" name="ncbsSdt" placeholder="" value="{{maininfo.[0].ncbsSdt}}" disabled>~
                <input type="text" class="form-control" id="ncbsEdt" name="ncbsEdt" placeholder="" value="{{maininfo.[0].ncbsEdt}}" disabled>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">註記</label>
            <div class="col-sm-8">
              <textarea class="form-control" rows="5" name="ncbsDesc" id="ncbsDesc" disabled>{{maininfo.[0].ncbsDesc}}</textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label form-inline">選擇檔案</label>
            <div class="col-sm-8">
              <div class="form-inline btn btn-default btn-file">
                <input type="hidden" class="form-control" id="imageFileTitle1" name="imageFileTitle1" placeholder="請輸入檔案" disabled> 請選擇檔案
                <input type="file" id="uploadingFile" name="uploadingFile" class="btn btn-lg btn-default" disabled>

              </div>

            </div>
          </div>

        </form>
      </div>
    </div>
    <div class="col-md-4 col-sm-5 col-xs-12">
      <div class="table_block">
        <h2>問卷資料基本資訊</h2>
        <div class="info">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>問卷總筆數：</td>
                  <td>{{successnum}}</td>
                </tr>
                <tr>
                  <td>最後上傳時間：</td>
                  <td>{{maininfo.[0].updTime}}</td>
                </tr>
                <tr>
                  <td>最後上傳人員：</td>
                  <td>{{maininfo.[0].updUser}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<div class="modal" id="modal1">
  <div class="table_block">
    <h2>上傳結果</h2>

    <div class="form-group">
      <label for="inputName" class="col-sm-3 control-label">上傳完成時間</label>
      <div class="col-sm-8">
        <input type="text" class="form-control " id="inputName" value="{{datetime}}" placeholder="" disabled>
      </div>
    </div>
    <div class="form-group">
      <label for="inputName" class="col-sm-3 control-label">新增名單筆數</label>
      <div class="col-sm-8">
        <input type="text" class="form-control " id="inputName" value="{{successnum}}" placeholder="" disabled>
      </div>
    </div>
    <div class="form-group">
      <label for="inputName" class="col-sm-3 control-label">名單總筆數</label>
      <div class="col-sm-8">
        <input type="text" class="form-control " id="inputName" value="{{total}}" placeholder="" disabled>
      </div>
    </div>
    <div class="form-group">
      <label for="inputName" class="col-sm-3 control-label">上傳結果</label>
      <div class="col-sm-8">
        <input type="text" class="form-control " id="inputName" value="{{successnum}}筆新增成功,{{errornum}}筆錯誤資料" placeholder="" disabled>
      </div>
    </div>
    <div class="form-group">
      <label for="inputName" class="col-sm-3 control-label">系統訊息</label>
      <div class="col-sm-8">
        <textarea class="form-control" rows="5" id="comment" disabled>
{{errormsg}}</textarea>
      </div>
    </div>
    <div class="btn-block center-block">
      <button type="button" class="btn btn-lg btn-default" onclick="closeWindow()">關閉</button>
    </div>
  </div>
</div>
<script>
  $(function () {
    if ("{{dispaly}}" != "block") {
      $('.modal').hide();

    }
    $('.modal').append('<div class="overlay"></div>');
    $('.modal .overlay').click(function (event) {
      $('.modal').hide();
      $('body').removeClass('noscroll');
    });
  });
function closeWindow() {
    $('.modal').hide();
    $('body').removeClass('noscroll');
  }
</script> 