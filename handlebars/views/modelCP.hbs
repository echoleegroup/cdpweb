{{> title title='模型總覽'}}
<div class="container">
  <!-- row div 於需要分兩欄才需要 -->
  <div class="row">
    <!-- 左欄 Start -->
    <div class="col-md-8 col-sm-7 col-xs-12">
      <!-- form set Start -->
      <div class="form_block">
        <h2>模型資訊</h2>
        <form id="reg" action="/model/modleCPeditAct" method="post" onsubmit="return checkForm()" class="form-horizontal">
          <input type="hidden" value="{{modelInfo.mdID}}" id="mdID" name="mdID" />
          <input type="hidden" value="{{batID}}" id="batID" name="batID" />
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">模型名稱</label>
            <div class="col-sm-8">
              <input type="text" class="form-control " id="mdName" name="mdName" value="{{modelInfo.mdName}}" disabled>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">促銷活動</label>
            <div class="col-sm-8">
              <input type="text" class="form-control " id="mdGoal" name="mdGoal" value="{{modelInfo.codeLabel}}" disabled>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">成效計算日期
            </label>
            <div class="col-sm-8">
              <div class="radio">
                <div class="form-inline">
                  <input type="text" class="form-control" id="exeDateFrom" name="exeDateFrom" placeholder="" value="{{modelInfo.exeDateFrom}}"> ~
                  <input type="text" class="form-control" id="exeDateTo" name="exeDateTo" placeholder="" value="{{modelInfo.exeDateTo}}">
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">潛在客群</label>
            <div class="col-sm-8">
              <textarea class="form-control" rows="5" id="taDesc" name="taDesc">{{modelInfo.taDesc}}</textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-sm-3 control-label">結案註記</label>
            <div class="col-sm-8">
              <div class="form-check form-check-inline">
                <label class="form-check-label">
                  <input class="form-check-input" type="checkbox" id="isClosed" name="isClosed"> 結案
                </label>
              </div>
            </div>
          </div>
          <div class="btn-block center-block">
            <button type="submit" id="openModal1" class="btn btn-lg btn-default">修改</button>
          </div>
        </form>
      </div>
      <div class="table_block">
        <h2>梯次資訊</h2>
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>梯次</th>
                <th> 投放名單總數</th>
                <th></th>
                <th>回應名單數</th>
                <th></th>
                <th>結案註記</th>
              </tr>
            </thead>
            <tbody>
              {{#each batcharray as |batch|}}
              <tr>
                <td>{{batch.batName}}</td>
                <td>
                  <a href="#" onclick="sentDetail('{{../modelInfo.mdID}}','{{batch.batID}}','{{batch.batName}}')">{{batch.sentcount}}</a>
                </td>
                <td>
                  <a href="/talist_putupload/talist_putuploadAdd?mdID={{../modelInfo.mdID}}">投放名單上傳</a>
                </td>
                <td>
                  <a href="#" onclick="respDetail('{{../modelInfo.mdID}}','{{batch.batID}}','{{batch.batName}}')">{{batch.respcount}}</a>
                </td>
                <td>
                  <a href="/talist_rspupload/talist_rspuploadAdd?mdID={{../modelInfo.mdID}}">回應名單上傳</a>
                </td>
                <td></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-sm-5 col-xs-12">
      <div class="table_block">
        <h2>模型基本資料</h2>
        <div class="info">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>模型建立時間：</td>
                  <td>{{modelInfo.crtTime}}</td>
                </tr>
                <tr>
                  <td>最後模型設定時間：</td>
                  <td>{{modelInfo.updTime}}</td>
                </tr>
                <tr>
                  <td>最後設定人員：</td>
                  <td>{{modelInfo.updUser}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="table_block">
        <h2>模型計算資訊</h2>
        <div class="info">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>模型計算批次：</td>
                  <td>{{newBatchName}}</td>
                </tr>
                <tr>
                  <td>最後模型計算時間：</td>
                  <td>{{newBatchLastTime}}</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="btn-block">
            <a class="btn btn-default btn-lg" href="/custGene/custGeneCP?mdID={{modelInfo.mdID}}&batID={{batID}}">
              客戶顯著特徵</a>
            <a class="btn btn-default btn-lg" href="/generaudic/generaudicCP?mdID={{modelInfo.mdID}}&batID={{batID}}">
              模型名單計算</a>
            <a class="btn btn-default btn-lg" href="/custobrv/custObrvCP?mdID={{modelInfo.mdID}}&batID={{batID}}">
              客戶行為軌跡</a>
            <a class="btn btn-default btn-lg" href="/modelDownload/modelDownload?mdID={{modelInfo.mdID}}&batID={{batID}}">
              模型名單下載</a>
            <a class="btn btn-default btn-lg" href="/custMotivation/custMotivationCP?mdID={{modelInfo.mdID}}&batID={{batID}}">
              消費先期指標</a>
          </div>
        </div>
      </div>
      <div class="table_block">
        <h2>成效計算資料</h2>
        <div class="info">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>最後成效計算時間：</td>
                  <td>{{model.mdRptCalTime}}</td>
                </tr>
              </tbody>
            </table>
            <div class="btn-block">
              <a class="btn btn-default btn-lg fa fa-bar-chart" href="/TAAnaRpt_Rult/TAAnaRpt_Rult?mdID={{modelInfo.mdID}}">成效報表</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="modal1">
  <div class="table_block">
    <h2 id="batchname">10月活動梯次 - 投放名單記錄</h2>
    <div class="info">
      <div class="table-responsive">
        <table class="table" id="senttable">
          <thead>
            <tr>
              <th>投放日期</th>
              <th>成效計算組別</th>
              <th>名單名稱</th>
              <th>管道</th>
              <th>投放總數</th>
              <th>上傳日期</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="overlay"></div>
</div>
<div class="modal" id="modal2">
  <div class="table_block">
    <h2 id="resbatchname">10月活動梯次 - 回應名單記錄</h2>
    <div class="info">
      <div class="table-responsive">
        <table class="table" id="resptable">
          <thead>
            <tr>
              <th>回應期間</th>
              <th>名單名稱</th>
              <th>管道</th>
              <th>回應總數</th>
              <th>上傳日期</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="overlay"></div>
</div>
<script>
  $('#exeDateFrom').datepicker({
    locale: "zh-tw"
  });
  $('#exeDateTo').datepicker({
    locale: "zh-tw"
  });
  function checkForm() {
    if (document.getElementById("exeDateFrom").value == '') {
      alert("成效計算日期(起)");
      document.getElementById("exeDateFrom").focus();
      return false;
    }
    if (document.getElementById("exeDateTo").value == '') {
      alert("成效計算日期(迄)");
      document.getElementById("exeDateTo").focus();
      return false;
    }
    if (document.getElementById("taDesc").value == '') {
      alert("請輸入潛在客群");
      document.getElementById("taDesc").focus();
      return false;
    }
    return true;
  }
  function sentDetail(mdID, batID, batName) {
    $("#senttable tbody").empty();
    $.ajax({
      url: "/model/sentDetail",
      data: {
        "mdID": mdID,
        "batID": batID
      },
      type: "POST",
      dataType: 'json',
      success: function (result) {
        var i;
        document.getElementById("batchname").value = batName + " - 投放名單記錄";
        for (i in result) {
          senthtml = '';
          senthtml += '<tr>';
          senthtml += '<td>' + result[i].sentListTime + '</td>';
          senthtml += '<td>' + result[i].sentListCateg + '</td>';
          senthtml += '<td>' + result[i].sentListName + '</td>';
          senthtml += '<td>' + result[i].sentListChannel + '</td>';
          senthtml += '<td>' + result[i].sentcount + '</td>';
          senthtml += '<td>' + result[i].updTime + '</td>';
          senthtml += '<td><a class="btn btn-default" href="/talist_putupload/talist_putuploadEdit?sentListID=' + result[i].sentListID + '">修改</td>';
          $('#senttable tbody').append(senthtml);
        }
        $('#modal1').show();
        $('body').addClass('noscroll');
      }
    });
  }
  function respDetail(mdID, batID, batName) {
    $("#resptable tbody").empty();
    $.ajax({
      url: "/model/respDetail",
      data: {
        "mdID": mdID,
        "batID": batID
      },
      type: "POST",
      dataType: 'json',
      success: function (result) {
        var i;
        document.getElementById("resbatchname").value = batName + " - 回應名單記錄";

        for (i in result) {
          resphtml = '';
          resphtml += '<tr>';
          resphtml += '<td>' + result[i].respListTime + '</td>';
          resphtml += '<td>' + result[i].respListName + '</td>';
          resphtml += '<td>' + result[i].respListChannel + '</td>';
          resphtml += '<td>' + result[i].respcount + '</td>';
          resphtml += '<td>' + result[i].updTime + '</td>';
          resphtml += '<td><a class="btn btn-default" href="/talist_rspupload/talist_rspuploadEdit?respListID=' + result[i].respListID + '">修改</td>';
          $('#resptable tbody').append(resphtml);
        }
        $('#modal2').show();
        $('body').addClass('noscroll');
      }
    });
  }
</script>
<script>
  $(function () {
    $('.modal').hide();
    $('.modal .overlay').click(function (event) {
      $('.modal').hide();
      $('body').removeClass('noscroll');
    });

  });
</script>